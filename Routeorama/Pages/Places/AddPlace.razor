@page "/add_place"
@inject AuthenticationStateProvider AuthenticationStateProvider


<div style="display: flex;
            	flex-direction: column;
            	flex-wrap: nowrap;
            	justify-content: center;
            	align-items: center;
            	align-content: stretch; 
            	height: 100vh; 
            	width: 100vw">
    <h1>Place</h1>
	<div style="display: flex;
                	flex-direction: column;
                	flex-wrap: nowrap;
                	justify-content: space-around;
                    width: 30vh;
					height: 50vh;">
		<input type="text" id="name" name="name" placeholder="name.." @bind-value="@_name">
		<textarea id="description" name="description" placeholder="description.." style="resize: none" @bind="@_description"></textarea>
		<input type="text" id="country" name="country" placeholder="country.." @bind-value="@_country">
		<input type="text" id="city" name="city" placeholder="city.." @bind-value="@_city">
		<button type="submit" id="submit" name="submit" @onclick="Submit">Submit</button>
	</div> 
</div> 


@code {
	private string _name; 
	private string _description;
	private string _country;
	private string _city;

	private void Submit()
	{
		var username = "asdf";
		//username = ((CustomAuthenticationStateProvider) AuthenticationStateProvider)?.GetDisplayName();
		var location = new Location()
		{ 
			City = _city,
			Country = _country,
			Latitude = 0,
			Longitude = 0
		};
		//Lat and long will be fetched with an API
		var place = new Place()
		{
			Author = username,
			Description = _description,
			Id = 0,
